{
  "name": "@nanodrop/contracts",
  "version": "0.0.1",
  "module": "dist/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build:js": "rollup --config",
    "dev": "rollup --config --watch",
    "build": "anchor build",
    "deploy": "solana program deploy --url https://solana-mainnet-api.rpc-node.com --program-id target/deploy/nanodrop-keypair.json --keypair target/deploy/authority-keypair.json --max-len 1000000 target/deploy/nanodrop.so",
    "test": "anchor test --skip-build  --skip-deploy --skip-local-validator",
    "build:test": "anchor build -- --features \"test\"",
    "deploy:test": "anchor deploy --provider.cluster https://solana-mainnet-api.rpc-node.com --program-keypair target/deploy/test-program-keypair.json --provider.wallet target/deploy/test-authority-keypair.json"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.27.0"
  },
  "devDependencies": {
    "@metaplex-foundation/js": "^0.19.3",
    "@metaplex-foundation/mpl-bubblegum": "^0.6.2",
    "@metaplex-foundation/mpl-token-metadata": "^2.11.1",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@solana/spl-account-compression": "^0.1.8",
    "@solana/spl-token": "^0.3.7",
    "@solana/web3.js": "^1.76.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.12",
    "bs58": "^5.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^5.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "tslib": "^2.5.2",
    "typescript": "^4.3.5"
  }
}
